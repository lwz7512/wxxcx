page{
    background-color: #FFFFFF;
}
image{
    margin: 4px 0;
}

hr {
  height: 2px;
  border: none;
  border-top:1px solid #555555;
  width: 100%;
}

.page__hd {
  padding: 15px;
}

.line {
  height: 1px;
  background: #ccc;
  margin-top: 10px;
  margin-bottom: 10px;
}

.intro {
  padding: 10px;
  background: #EEE;
  border-radius: 6px;
  margin-left: 15px;
  margin-right: 15px;
  color: #666;
}

.weui-article__p {
  margin: 10px 0 .8em;
}

.weui-article__h2 {
  font-weight: 800;
}

.weui-article__h3 {
  font-weight: 800;
}

.weui-article__img {
   width: 100%;
  /* height: 180px; */
}

.weui-media-box__desc {
  margin-top: 4px;
  margin-bottom: 10px;
}

.weui-badge {
  margin-right: 5px;
}

video {
  width: 100%;
  height: 211px;
}

/* for video view */
.section.tc {
  background-color: #000;
  display: flex;
  justify-content: center;
}

/* hexo blog article entry */
.article-entry .highlight {
  background: #2d2d2d;
  margin: 0 -20px;
  padding: 15px 20px;
  border-style: solid;
  border-color: #ddd;
  border-width: 1px 0;
  overflow: auto;
  color: #ccc;
  line-height: 22.400000000000002px;
}

.article-entry .highlight table {
  margin: 0;
  width: auto;
}
.article-entry .highlight td {
  border: none;
  padding: 0;
}

.article-entry .line {
  background: none;
}

.wxParse-tr {
  border-top: none;
  border-bottom: none;
  border-right: none;
}

.wxParse-th, .wxParse-td {
  flex: none;
  border-left: none;
}







