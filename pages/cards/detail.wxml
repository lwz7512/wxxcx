<import src="../../wxParse/wxParse.wxml"/>

<view class="header-card">
  <view class="image-roundcorner">
    <video id="myVideo" src="{{video_src}}" controls="true" initial-time="{{initialTime}}"
      bindplay="videoPlayed" bindpause="videoPaused" bindtimeupdate="videoUpdated"></video>
  </view>
  <view class="card-body-white">
    <view class="running-ads">
      <text class="ad-item {{activeIndex == 1?'animation':''}}">滚动广告条。。。。</text>
      <text class="ad-item {{activeIndex == 2?'animation':''}}">垂直跑马灯。。。。</text>
      <text class="ad-item {{activeIndex == 3?'animation':''}}">可以展示可点击内容</text>
    </view>
    <text class="speaker">主讲人</text>
    <view class="speaker-intro">
      <view class="avatar">
        <image src="../../images/user-unlogin.png" class="avt-img"/>
      </view>
      <view class="text-rows">
        <view class="user-row">
          <text class="user-name">Irene</text>
          <text class="attenders">323人购买</text>
        </view>
        <view class="title-row">
          毕马威税务合伙人
        </view>
      </view>
    </view>
  </view>
</view>

