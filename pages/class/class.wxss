/* pages/class/class.wxss */
.stv-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

swiper {
  width: 100%;
  height: 30px;
  padding-bottom: 10px;
}

swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
}

.stv-container .tab-bar {
  position: relative;
  display: flex;
  font-size: 30rpx;
  color: #666666;
  width: 100%;
  height: 40px;
  padding-top: 4px;
}

.stv-container .tab-bar .under-line {
  position: absolute;
  bottom: 0;
  height: 6rpx;
  background-color: #2d80ff;
  width: 100%;
}

.switch-content {
  padding: 10px;
}
