/* pages/mine/mine.wxss */

.container {
  width: 100%;
  margin-bottom: 10rpx;
}

.header {
  width: 100%;
  height: 320rpx;
  /* border-radius: 50%; */
  background-color: #FFF;
  /* margin-top: -160rpx; */
  position: relative;
}

.header .group {
  width: 100%;
  position: absolute;
  margin-top: 40px;
  text-align: center;
}

.header .avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.header .name {
  width: 100%;
  display: inline-block;
  margin-top: 10rpx;
  color: #FFF;
}

.bgimage {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
}

button[type=primary] {
  /* background-color: #56B5FC; */
  border-radius: 0;
  /* font-size: 16px; */
}

.userinfo, .uploader, .tunnel {
    /* margin-top: 40rpx; */
    height: 140rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}

.userinfo-avatar {
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    font-size: 32rpx;
    background-color: transparent;
    color: #FFF;
    /* color: #007AFF; */
    /* background-color: white; */
}

.userinfo-nickname::after {
  border: none;
}

.weui-cells_after-title {
  margin-top: 10px;
}

.weui-cell {
  padding: 15px;
}

.weui-cells:before{
  top:0;
  border-top: none;
}

.weui-cells:after{
  bottom:0;
  border-bottom:none;
}

