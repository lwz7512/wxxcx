/* pages/mine/speedtest.wxss */
.page__bd {
  padding-bottom: 20px;
}

.weui-progress{
    margin-bottom: 20px;
}

.weui-progress__opr {
  width: 50px;
  font-size: 14px;
}

.speed-label {
  font-size: 16px;
}

.speed-sections {
  display: flex;
  height: 18px;
  padding-bottom: 10px;
}

.speed-sections .section {
  flex: 1;
  color: #FFFFFF;
  font-size: 12px;
  padding-left: 4px;
}

.speed-sections .section.low {
  background-color: #E1BF90;
}

.speed-sections .section.medium {
  background-color: #76C892;
  flex: 7;
}

.speed-sections .section.high {
  background-color: #2087FB;
  flex: 2;
}
